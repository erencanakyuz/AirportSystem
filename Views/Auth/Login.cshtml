@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section HideNavbar {
    <style>
        .navbar {
            display: none;
        }
    </style>
}
<div class="neon-container">
    <div class="neon-box">
        <h2>Welcome Back</h2>
        <p class="subtitle">Log in to your account</p>
        <form method="post">
            <div class="input-group">
                <input type="email" name="email" placeholder="Email" required />
            </div>
            <div class="input-group">
                <input type="password" name="password" placeholder="Password" required />
            </div>
            <button type="submit">Login</button>
        </form>
        <p class="register-text">Don't have an account? <a href="/Auth/Register">Register</a></p>
    </div>
</div>

<style>
    body {
        background: url('/images/BackgorundLogin1.jpg') no-repeat center center/cover;
        color: white;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        font-family: Arial, sans-serif;
    }

    .neon-container {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        flex-grow: 1;
    }

    .neon-box {
        background: rgba(0, 0, 0, 0.7);
        backdrop-filter: blur(5px);
        padding: 40px;
        border-radius: 15px;
        text-align: center;
        box-shadow: 0 0 20px #004d99;
        max-width: 350px;
        width: 100%;
    }

    h2 {
        color: #00bfff;
        font-size: 24px;
        margin-bottom: 10px;
    }

    .subtitle {
        color: #ccc;
        margin-bottom: 20px;
    }

    .input-group {
        margin-bottom: 15px;
    }

    input {
        width: 100%;
        padding: 12px;
        border: 1px solid #00bfff;
        background: black;
        color: #00bfff;
        border-radius: 5px;
        text-align: center;
        font-size: 16px;
    }

    button {
        width: 100%;
        padding: 12px;
        border: none;
        background: #00bfff;
        color: white;
        font-size: 16px;
        border-radius: 5px;
        cursor: pointer;
        transition: 0.3s;
    }

    button:hover {
        background: #0088cc;
    }

    .register-text {
        margin-top: 15px;
        color: #ccc;
    }

    .register-text a {
        color: #00bfff;
        text-decoration: none;
        font-weight: bold;
    }

    .register-text a:hover {
        text-decoration: underline;
    }
</style>
