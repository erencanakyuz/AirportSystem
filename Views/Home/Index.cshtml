@{
    ViewData["Title"] = "Dashboard";
}

<div class="container text-center">
    <h2 class="mt-4">Airport Management System</h2>
    <p class="text-muted">Demo version with randomized data</p>

    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card text-white bg-success mb-3">
                <div class="card-body">
                    <h5 class="card-title">Flights</h5>
                    <p class="card-text">Manage flight arrivals, departures, and scheduling.</p>
                    <a href="/Flights" class="btn btn-light">View</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning mb-3">
                <div class="card-body">
                    <h5 class="card-title">Fuel Management</h5>
                    <p class="card-text">Monitor fuel stocks and costs.</p>
                    <a href="/Fuel" class="btn btn-light">View</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-danger mb-3">
                <div class="card-body">
                    <h5 class="card-title">Maintenance</h5>
                    <p class="card-text">Track aircraft and ground equipment maintenance.</p>
                    <a href="/Maintenance" class="btn btn-light">View</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info mb-3">
                <div class="card-body">
                    <h5 class="card-title">Logistics</h5>
                    <p class="card-text">Manage baggage and ground services.</p>
                    <a href="/Logistics" class="btn btn-light">View</a>
                </div>
            </div>
        </div>
    </div>
</div>
