@model AirportDemo.Models.Flight

@{
    ViewData["Title"] = "Edit Flight";
}

<div class="container mt-4">
    <h2>Edit Flight</h2>

    <form asp-action="Edit" method="post" onsubmit="return confirmEdit();">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label">Flight Number</label>
            <input asp-for="FlightNumber" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Destination</label>
            <input asp-for="Destination" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Departure Time</label>
            <input asp-for="DepartureTime" type="datetime-local" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

<script>
    function confirmEdit() {
        return confirm("Do you want to apply these changes?");
    }
</script>
