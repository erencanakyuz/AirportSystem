@model AirportDemo.Models.Flight
@{
 Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Delete Flight";
}

<h2>Are you sure you want to delete this flight?</h2>

<dl class="row">
    <dt class="col-sm-3">Flight Number:</dt>
    <dd class="col-sm-9">@Model.FlightNumber</dd>

    <dt class="col-sm-3">Route:</dt>
    <dd class="col-sm-9">@Model.DepartureLocation â†’ @Model.Destination</dd>

    <dt class="col-sm-3">Departure Time:</dt>
    <dd class="col-sm-9">@Model.DepartureTime.ToString("g")</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger"
        onclick="return confirm('Are you sure you want to delete this flight?');">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
